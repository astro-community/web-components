{
  "include": [
    "packages/**/*.*",
    "demo/**/*.*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": ".",
    "declarationMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  }
}
